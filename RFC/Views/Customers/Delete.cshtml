@model RFC.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="right">
    <div class="header" style="display:flex; justify-content: space-between;">
        <h1 style="display:inline-block; width:auto; vertical-align: top;">Are you sure?</h1>
        <div class="buttons" style="margin-top: 0px; display:inline-block;width:auto;vertical-align: top;">
            <div class="otherButtons">
                <a style="width: 100%" class="button submit btn btn-default" asp-area="" asp-controller="Customers" asp-action="Details" asp-route-id="@Model.ID">Go Back</a>
            </div>
        </div>
    </div>
    <div class="rightContent">
        <form asp-action="Delete">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Model.ID
                        </td>
                        <td>
                            @Model.Name
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="buttons" style="display: flex; justify-content: space-around">
                <input type="submit" class="btn btn-danger" value="Yes"></input>
                <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.ID" type="submit" class="btn btn-success">No</a>
            </div>
        </form>
    </div>
</div>


<style>
    .collapsible {
        background-color: #f3f3f3;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
        font-weight: bold;
        border-color: #f3f3f3;
        outline: none;
    }

        .active, .collapsible:hover {
            background-color: #d2d2d2;
        }

    .content {
        padding: 0 18px;
        display: none;
        overflow: hidden;
        background-color: #d2d2d2;
    }

    .p-wrapped {
        word-break: break-all;
        white-space: normal
    }

    #Question:focus {
        outline: none;
    }
</style>


<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "block") {
                content.style.display = "none";
            } else {
                content.style.display = "block";
            }
        });
    }
</script>