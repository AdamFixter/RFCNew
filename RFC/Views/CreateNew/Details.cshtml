@model RFC.Models.CreateNew

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="right">
        <div class="header">
            <h1>Details</h1>
        </div>
        <div class="rightContent">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Priority
                        </th>
                        <th>
                            Product
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Requested Due Date
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Model.ID
                        </td>
                        <td>
                            @Model.Priority
                        </td>
                        <td>
                            @Model.Product
                        </td>
                        <td>
                            @Model.CustomersAffected
                        </td>
                        <td>
                            @Model.DueDate
                        </td>
                    </tr>
                </tbody>
            </table>
            <h3>Questions:</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Question
                        </th>
                        <th>
                            Answer
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Priority)</td>
                        <td>@Model.Priority</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Product)</td>
                        <td>@Model.Product</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ReasonForChange)</td>
                        <td>@Model.ReasonForChange</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ChangeDescription)</td>
                        <td>@Model.ChangeDescription</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.SystemAffected)</td>
                        <td>@Model.SystemAffected</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.customers)</td>
                        <td>@Model.customers</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.WhoPerforming)</td>
                        <td>@Model.WhoPerforming</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.RiskOfChange)</td>
                        <td>@Model.RiskOfChange</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.RiskNoChange)</td>
                        <td>@Model.RiskNoChange</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.VerifyAfter)</td>
                        <td>@Model.VerifyAfter</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.RollBackPlan)</td>
                        <td>@Model.RollBackPlan</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.DueDate)</td>
                        <td>@Model.DueDate</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.WhyDueDate)</td>
                        <td>@Model.WhyDueDate</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ServiceImpact)</td>
                        <td>@Model.ServiceImpact</td>
                    </tr>
                </tbody>
            </table>
            <div class="buttons">
                <div class="otherButtons">
                    <a class="button submit btn btn-default" asp-area="" asp-controller="CreateNew" asp-action="Index">Go Back</a>
                </div>
            </div>
        </div>
    </div>